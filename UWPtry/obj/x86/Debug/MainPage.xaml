            <TextBlock x:ConnectionId='5' x:Name="txtResult" TextWrapping="Wrap" Text="" Margin="0,30,0,0" HorizontalAlignment="Center"/>
            <Button x:ConnectionId='6' x:Name="btnChangePage" Content="PROSEGUI" Margin="0,30,0,0" HorizontalAlignment="Center"                            />
            

        </StackPanel>
        <Frame x:ConnectionId='3' x:Name="FrameNavigate" Margin="10,10,0,0">
            
        </Frame>
